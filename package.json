  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@types/concat-stream": "^1.6.1",
    "actions-toolkit": "^6.0.1",
    "concat-stream": "^2.0.0",
    "conventional-changelog": "^3.1.24",
    "conventional-recommended-bump": "^6.1.0",
    "json5": "^2.2.0"
